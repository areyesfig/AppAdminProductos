<%# Dashboard Principal %>

<%- include('../partials/alerts', { errors, success }) %>

<div class="page-header mb-4">
    <h1>
        <i class="bi bi-speedometer2 me-2"></i>Dashboard
    </h1>
    <p class="text-muted">Bienvenido, <%= user.nombre %>. Aquí está un resumen de la actividad.</p>
</div>

<%# Tarjetas de estadísticas %>
<div class="row g-4 mb-4">
    <div class="col-sm-6 col-xl-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                    <i class="bi bi-box-seam"></i>
                </div>
                <div>
                    <div class="stat-value"><%= stats.total || 0 %></div>
                    <div class="stat-label">Total Productos</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-sm-6 col-xl-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                    <i class="bi bi-archive"></i>
                </div>
                <div>
                    <div class="stat-value"><%= stats.stock_total || 0 %></div>
                    <div class="stat-label">Stock Total</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-sm-6 col-xl-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                    <i class="bi bi-currency-dollar"></i>
                </div>
                <div>
                    <div class="stat-value">$<%= stats.precio_promedio ? stats.precio_promedio.toFixed(2) : '0.00' %></div>
                    <div class="stat-label">Precio Promedio</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-sm-6 col-xl-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                    <i class="bi bi-tags"></i>
                </div>
                <div>
                    <div class="stat-value"><%= stats.categorias || 0 %></div>
                    <div class="stat-label">Categorías</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <%# Mis productos recientes %>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-box me-2"></i>Mis Productos</span>
                <a href="/productos/nuevo" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus"></i> Nuevo
                </a>
            </div>
            <div class="card-body">
                <% if (misProductos && misProductos.length > 0) { %>
                    <div class="list-group list-group-flush">
                        <% misProductos.forEach(function(producto) { %>
                            <a href="/productos/<%= producto.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div>
                                    <strong><%= producto.nombre %></strong>
                                    <br>
                                    <small class="text-muted">
                                        <%= producto.categoria || 'Sin categoría' %> • 
                                        Stock: <%= producto.stock %>
                                    </small>
                                </div>
                                <span class="badge bg-primary rounded-pill">$<%= producto.precio.toFixed(2) %></span>
                            </a>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                        <p class="mt-2 mb-0">No tiene productos registrados</p>
                        <a href="/productos/nuevo" class="btn btn-outline-primary btn-sm mt-2">
                            Crear primer producto
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <%# Productos recientes del sistema %>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-clock-history me-2"></i>Productos Recientes</span>
                <a href="/productos" class="btn btn-outline-primary btn-sm">Ver todos</a>
            </div>
            <div class="card-body">
                <% if (productosRecientes && productosRecientes.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Precio</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% productosRecientes.forEach(function(producto) { %>
                                    <tr>
                                        <td>
                                            <a href="/productos/<%= producto.id %>" class="text-decoration-none">
                                                <%= producto.nombre %>
                                            </a>
                                            <br>
                                            <small class="text-muted"><%= producto.categoria || 'Sin categoría' %></small>
                                        </td>
                                        <td>$<%= producto.precio.toFixed(2) %></td>
                                        <td>
                                            <span class="badge <%= producto.stock > 10 ? 'bg-success' : producto.stock > 0 ? 'bg-warning' : 'bg-danger' %>">
                                                <%= producto.stock %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                        <p class="mt-2 mb-0">No hay productos en el sistema</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%# Acciones rápidas %>
<div class="card mt-4">
    <div class="card-header">
        <i class="bi bi-lightning me-2"></i>Acciones Rápidas
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <a href="/productos/nuevo" class="btn btn-outline-primary w-100 py-3">
                    <i class="bi bi-plus-circle me-2"></i>Nuevo Producto
                </a>
            </div>
            <div class="col-md-4">
                <a href="/productos" class="btn btn-outline-secondary w-100 py-3">
                    <i class="bi bi-list-ul me-2"></i>Ver Productos
                </a>
            </div>
            <div class="col-md-4">
                <a href="/dashboard/perfil" class="btn btn-outline-info w-100 py-3">
                    <i class="bi bi-person me-2"></i>Mi Perfil
                </a>
            </div>
        </div>
    </div>
</div>
