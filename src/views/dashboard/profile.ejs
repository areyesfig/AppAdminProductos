<%# Perfil de Usuario %>

<%- include('../partials/alerts', { errors, success }) %>

<div class="page-header mb-4">
    <h1>
        <i class="bi bi-person me-2"></i>Mi Perfil
    </h1>
    <p class="text-muted">Administre su información personal</p>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card text-center">
            <div class="card-body py-5">
                <div class="mb-3">
                    <i class="bi bi-person-circle text-primary" style="font-size: 5rem;"></i>
                </div>
                <h4 class="mb-1"><%= user.nombre %></h4>
                <p class="text-muted mb-3"><%= user.email %></p>
                <span class="badge bg-primary fs-6"><%= user.rol %></span>
                
                <hr class="my-4">
                
                <div class="text-start">
                    <p class="mb-2">
                        <strong><i class="bi bi-calendar3 me-2"></i>Miembro desde:</strong>
                        <br>
                        <span class="text-muted">
                            <%= new Date(user.fecha_creacion).toLocaleDateString('es-ES', { 
                                year: 'numeric', 
                                month: 'long', 
                                day: 'numeric' 
                            }) %>
                        </span>
                    </p>
                    <% if (user.ultimo_login) { %>
                        <p class="mb-0">
                            <strong><i class="bi bi-clock-history me-2"></i>Último acceso:</strong>
                            <br>
                            <span class="text-muted">
                                <%= new Date(user.ultimo_login).toLocaleDateString('es-ES', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </span>
                        </p>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <i class="bi bi-shield-lock me-2"></i>Seguridad
            </div>
            <div class="card-body">
                <a href="/dashboard/cambiar-password" class="btn btn-outline-primary w-100">
                    <i class="bi bi-key me-2"></i>Cambiar Contraseña
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil me-2"></i>Editar Información
            </div>
            <div class="card-body">
                <form action="/dashboard/perfil" method="POST">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre Completo</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="nombre" 
                            name="nombre" 
                            value="<%= typeof oldInput !== 'undefined' && oldInput.nombre ? oldInput.nombre : user.nombre %>"
                            required
                        >
                    </div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input 
                            type="email" 
                            class="form-control" 
                            id="email" 
                            name="email" 
                            value="<%= typeof oldInput !== 'undefined' && oldInput.email ? oldInput.email : user.email %>"
                            required
                        >
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Rol</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            value="<%= user.rol %>"
                            disabled
                        >
                        <div class="form-text">El rol no puede ser modificado por el usuario</div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Guardar Cambios
                        </button>
                        <a href="/dashboard" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
