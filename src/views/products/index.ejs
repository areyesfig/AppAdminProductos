<%# Lista de Productos %>

<%- include('../partials/alerts', { errors, success }) %>

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>
            <i class="bi bi-box-seam me-2"></i>Productos
        </h1>
        <p class="text-muted mb-0">Gestione el catálogo de productos</p>
    </div>
    <a href="/productos/nuevo" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Nuevo Producto
    </a>
</div>

<%# Filtros %>
<div class="card mb-4">
    <div class="card-body">
        <form action="/productos" method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="busqueda" class="form-label">Buscar</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="busqueda" 
                        name="busqueda" 
                        value="<%= filters.busqueda || '' %>"
                        placeholder="Buscar por nombre..."
                    >
                </div>
            </div>
            
            <div class="col-md-3">
                <label for="categoria" class="form-label">Categoría</label>
                <select class="form-select" id="categoria" name="categoria">
                    <option value="">Todas las categorías</option>
                    <% categorias.forEach(function(cat) { %>
                        <option value="<%= cat %>" <%= filters.categoria === cat ? 'selected' : '' %>>
                            <%= cat %>
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div class="col-md-3">
                <label for="ordenarPor" class="form-label">Ordenar por</label>
                <select class="form-select" id="ordenarPor" name="ordenarPor">
                    <option value="fecha_creacion" <%= filters.ordenarPor === 'fecha_creacion' ? 'selected' : '' %>>Fecha</option>
                    <option value="nombre" <%= filters.ordenarPor === 'nombre' ? 'selected' : '' %>>Nombre</option>
                    <option value="precio" <%= filters.ordenarPor === 'precio' ? 'selected' : '' %>>Precio</option>
                    <option value="stock" <%= filters.ordenarPor === 'stock' ? 'selected' : '' %>>Stock</option>
                </select>
            </div>
            
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="bi bi-funnel me-2"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<%# Lista de productos %>
<% if (productos && productos.length > 0) { %>
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Categoría</th>
                        <th class="text-end">Precio</th>
                        <th class="text-center">Stock</th>
                        <th>Creado por</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto) { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-3">
                                        <i class="bi bi-box text-primary"></i>
                                    </div>
                                    <div>
                                        <a href="/productos/<%= producto.id %>" class="text-decoration-none fw-semibold">
                                            <%= producto.nombre %>
                                        </a>
                                        <% if (producto.descripcion) { %>
                                            <br>
                                            <small class="text-muted">
                                                <%= producto.descripcion.substring(0, 50) %><%= producto.descripcion.length > 50 ? '...' : '' %>
                                            </small>
                                        <% } %>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <% if (producto.categoria) { %>
                                    <span class="badge bg-secondary"><%= producto.categoria %></span>
                                <% } else { %>
                                    <span class="text-muted">-</span>
                                <% } %>
                            </td>
                            <td class="text-end fw-semibold">$<%= producto.precio.toFixed(2) %></td>
                            <td class="text-center">
                                <span class="badge <%= producto.stock > 10 ? 'bg-success' : producto.stock > 0 ? 'bg-warning' : 'bg-danger' %>">
                                    <%= producto.stock %>
                                </span>
                            </td>
                            <td>
                                <small class="text-muted"><%= producto.creador_nombre %></small>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a href="/productos/<%= producto.id %>" class="btn btn-outline-primary" title="Ver">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <% if (typeof user !== 'undefined' && (producto.usuario_id === user.id || user.rol === 'admin')) { %>
                                        <a href="/productos/<%= producto.id %>/editar" class="btn btn-outline-secondary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form action="/productos/<%= producto.id %>?_method=DELETE" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger" title="Eliminar" data-confirm="¿Está seguro de eliminar este producto?">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-4">
        <%- include('../partials/pagination', { pagination, filters }) %>
    </div>
<% } else { %>
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No se encontraron productos</h4>
            <p class="text-muted">
                <% if (filters.busqueda || filters.categoria) { %>
                    No hay productos que coincidan con los filtros aplicados.
                    <br>
                    <a href="/productos" class="text-primary">Limpiar filtros</a>
                <% } else { %>
                    Aún no hay productos registrados en el sistema.
                <% } %>
            </p>
            <a href="/productos/nuevo" class="btn btn-primary mt-2">
                <i class="bi bi-plus-lg me-2"></i>Crear Primer Producto
            </a>
        </div>
    </div>
<% } %>
