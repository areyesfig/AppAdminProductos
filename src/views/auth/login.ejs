<%# Formulario de Login %>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="card mt-5">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-2 fw-bold">Iniciar Sesión</h3>
                    <p class="text-muted">Ingrese sus credenciales para continuar</p>
                </div>
                
                <%- include('../partials/alerts', { errors, success }) %>
                
                <form action="/auth/login" method="POST" novalidate>
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                name="email" 
                                value="<%= typeof oldInput !== 'undefined' && oldInput.email ? oldInput.email : '' %>"
                                placeholder="correo@ejemplo.com"
                                required
                                autofocus
                            >
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input 
                                type="password" 
                                class="form-control" 
                                id="password" 
                                name="password" 
                                placeholder="••••••••"
                                required
                            >
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Ingresar
                        </button>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <p class="text-center text-muted mb-0">
                    ¿No tiene cuenta? 
                    <a href="/auth/register" class="text-primary">Regístrese aquí</a>
                </p>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a href="/" class="text-muted">
                <i class="bi bi-arrow-left me-1"></i>Volver al inicio
            </a>
        </div>
    </div>
</div>
