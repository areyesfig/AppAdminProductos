# Variables de entorno para la aplicación web segura
# IMPORTANTE: No subir este archivo a repositorios públicos

# Puerto del servidor
PORT=3000

# Entorno de ejecución (development, production)
NODE_ENV=development

# Clave secreta para sesiones (cambiar en producción)
SESSION_SECRET=tu_clave_secreta_muy_segura_cambiar_en_produccion_123456

# Clave secreta para JWT (cambiar en producción)
JWT_SECRET=jwt_clave_secreta_muy_segura_cambiar_en_produccion_789012

# Configuración de la base de datos SQLite
DB_PATH=./data/database.sqlite

# Tiempo de expiración del token JWT (en segundos)
JWT_EXPIRES_IN=3600

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
